#!/usr/bin/env ruby
# Usage: bars [-p]
# Read your ~/bars.yaml file and output the results

require 'bars'
require 'trollop'

options = Trollop::options do
  opt :percent, "Percentage output", :short => 'q'
  opt :bar_size, "Set bar size", :short => 'b', :type => :int
end

bars = Bars.new(options)
bars.print
